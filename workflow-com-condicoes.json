{
  "id": "workflow-1757021312321",
  "name": "Seguir Curtidores com Condicional",
  "edges": [
    {
      "id": "e1-2",
      "type": "custom",
      "source": "step-1-monitor",
      "target": "step-2-if"
    },
    {
      "id": "e2-3-true",
      "type": "custom",
      "source": "step-2-if",
      "target": "step-3-foreach",
      "sourceHandle": "onTrue"
    },
    {
      "id": "e2-4-false",
      "type": "custom",
      "source": "step-2-if",
      "target": "step-4-delay",
      "sourceHandle": "onFalse"
    }
  ],
  "instanceName": "olavodecarvalho.ia",
  "steps": [
    {
      "id": "step-1-monitor",
      "name": "Monitorar Posts",
      "actions": [
        {
          "type": "monitorPosts",
          "params": {
            "usernames": [
              "anarchy.ia"
            ],
            "maxPostsPerUser": 1
          }
        }
      ],
      "position": {
        "x": -395.3215001111895,
        "y": 82.5401555681962
      }
    },
    {
      "id": "step-2-if",
      "name": "Encontrou Curtidores?",
      "actions": [
        {
          "type": "if",
          "params": {
            "operator": "isNotEmpty",
            "variable": "{{steps.step-1-monitor.result.allLikers}}"
          }
        }
      ],
      "position": {
        "x": -409.02821556890046,
        "y": 330.21314170501887
      }
    },
    {
      "id": "step-4-delay",
      "name": "Aguardar 30 Segundos",
      "actions": [
        {
          "type": "delay",
          "params": {
            "duration": 30000
          }
        }
      ],
      "position": {
        "x": -243.45836764953205,
        "y": 677.4129852695971
      }
    },
    {
      "id": "step-3-foreach",
      "name": "Seguir Cada Usuário",
      "actions": [
        {
          "type": "forEach",
          "params": {
            "list": "{{steps.step-1-monitor.result.allLikers}}",
            "actions": [
              {
                "type": "followUser",
                "params": {
                  "username": "{{item}}"
                }
              },
              {
                "type": "delay",
                "params": {
                  "duration": 120000
                }
              }
            ]
          }
        }
      ],
      "position": {
        "x": -667.7338457208361,
        "y": 647.325591645857
      }
    }
  ],
  "config": {
    "timeout": 300000,
    "stopOnError": false
  },
  "description": "Workflow que monitora posts, verifica se há curtidores e os segue condicionalmente"
}